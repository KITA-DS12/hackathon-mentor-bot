{
  "name": "hackathon-mentor-bot",
  "version": "1.0.0",
  "description": "Slack bot for hackathon mentoring",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": ["slack", "bot", "hackathon", "mentoring"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/bolt": "^3.17.0",
    "@google-cloud/firestore": "^7.3.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}